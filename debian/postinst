#!/bin/bash
# postinst script for vx-dga-l-congelar-escritorio
#
# see: dh_installdeb(1)

set -e

# summary of how this script can be called:
#        * <postinst> `configure' <most-recently-configured-version>
#        * <old-postinst> `abort-upgrade' <new version>
#        * <conflictor's-postinst> `abort-remove' `in-favour' <package>
#          <new-version>
#        * <postinst> `abort-remove'
#        * <deconfigured's-postinst> `abort-deconfigure' `in-favour'
#          <failed-install-package> <version> `removing'
#          <conflicting-package> <version>
# for details, see http://www.debian.org/doc/debian-policy/ or
# the debian-policy package


case "$1" in
    configure)

	chmod +x /usr/bin/congelar-escritorio

	if ! test -f /usr/bin/tareas-logout ; then
		if touch /usr/bin/tareas-logout ; then
			chmod +x /usr/bin/tareas-logout
		fi
	fi

	if ! grep "/usr/bin/congelar-escritorio" /usr/bin/tareas-logout ; then
			echo "/usr/bin/congelar-escritorio" >> /usr/bin/tareas-logout
	fi
	
	if ! grep "session-cleanup-script=" /etc/lightdm/lightdm.conf > /dev/null ; then
		echo "session-cleanup-script=/usr/bin/tareas-logout" >>  /etc/lightdm/lightdm.conf
	else
		sed -i "s#session-cleanup-script=.*#session-cleanup-script=/usr/bin/tareas-logout#g" /etc/lightdm/lightdm.conf
	fi

	if test -f /etc/xdg/autostart/confescritorio.desktop
	then
		rm /etc/xdg/autostart/confescritorio.desktop
	fi
	
        # dconf update
    ;;

    abort-upgrade|abort-remove|abort-deconfigure)
    ;;

    *)
        echo "postinst called with unknown argument \`$1'" >&2
        exit 1
    ;;
esac

# dh_installdeb will replace this with shell code automatically
# generated by other debhelper scripts.

#DEBHELPER#

exit 0
